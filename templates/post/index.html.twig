{% extends 'base.html.twig' %}

{% block body%}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
 <H2>List all posts</H2>
 <table class = "table table striped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {% for post in posts%}
        <tr>
            <td>{{post.id}} </td>
            <td>
                <a href="{{path('post.show',{id: post.id })}}">
                {{post.title}}
            </td>
            <td>
            <a class= "text-danger" href="{{path('post.delete',{id:post.id})}}">
            Delete
            </td>
        </tr>

        {%endfor%}
        <form action="{{ path('post.create') }}" method="GET">
            <input class="input_button btn btn-primary" type="submit" value="Create a new Book" />
        </form>
    </tbody>

 </table>


{% endblock%}